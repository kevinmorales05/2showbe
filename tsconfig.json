{
    "compilerOptions": {
      "rootDirs": ["src"],
      "outDir": "dist",
      "lib": ["ES2020"],
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "types": ["node"],
      "sourceMap": true, // to debugging
      "skipLibCheck": true,
    },
    "moduleDirectories": ["node_modules", "src"],
    "include": ["./src/**/*.tsx", "./src/**/*.ts"] // pinpoint the source root
    // "exclude": ["src/__tests__"],
  }