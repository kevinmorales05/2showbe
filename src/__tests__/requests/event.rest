###
POST {{url}}
Content-Type: application/json
X-REQUEST-TYPE: GraphQL

mutation Mutation($input: EventInput) {
  createEvent(input: $input) {
    eventCategoryRef {
      categoryType
      name
      shortDescription
      longDescription
      icon
      urlImg
    }
    ticketTypeRef {
      name
      description
      section
      cost
      currency
      ticketsAvailable
    }
    stageRef {
      address {
        city
        country
        state
        mainStreet
        numberStreet
        reference
        lat
        long
        secondStreet
        languages
        mapsURL
      }
      name
      description
      longDescription
      openFrom
      closeTo
      banners
      videoURL
      capacity
      daysOpen
      onlineLink
    }
    scheduleRef {
      dayNumber
      attendFrom
      attendTo
    }
    addressRef {
      city
      country
      state
      mainStreet
      numberStreet
      reference
      lat
      long
      secondStreet
      languages
      mapsURL
    }
    eventPropsRef {
      eventName
      artistName
      shortDescription
      mainDescription
      dateEvent
      banners
      videoImg
      status
      hourEvent
      urlEvent
      ticketsAvailable
      online
      concertPlacesIMG
      visitorTeam
      homeTeam
      sportType
    }
  }
}

